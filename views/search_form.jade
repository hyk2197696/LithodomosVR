extends sidebartest

block content
  h1.text-center #{title}

  form(method='POST' action='')
    div.form-group
      label(for='id') ID:
      input#name.form-control(type='text', placeholder='Asset ID' name='id' )
    button.btn.btn-primary(type='submit') Submit

  if errors
    ul
      for error in errors
        li!= error.msg